<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">



    <TextView
        android:id="@+id/personName"
        android:layout_width="match_parent"
        android:text="personName"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/personGivenName"
        android:text="personGivenName"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/personFamilyName"
        android:layout_width="match_parent"
        android:text="personFamilyName"

        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/personEmail"
        android:layout_width="match_parent"
        android:text="personEmail"

        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/personId"
        android:layout_width="match_parent"
        android:text="personId"

        android:layout_height="wrap_content">

    </TextView>
    <ImageView
        android:id="@+id/personPhoto"
        android:layout_width="300dp"
        android:src="@color/cardview_dark_background"
        android:layout_height="300dp">

    </ImageView>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/signout"
        android:layout_width="match_parent"
        android:text="Sign Out"
        android:layout_height="wrap_content">

    </Button>


</LinearLayout>